<div id = flash>
 <% if flash[:error] %>
  <p><%= flash[:error] %></p></br>
 <% end %>
 <% if flash[:notice] %>
  <p><%= flash[:notice] %></p></br>
 <% end %>
</div>

<div>
  <% if @user.nil? == false %>
      <%= content_tag :a, @user.username %>
      <%= link_to('Logout', '/logout', method: :delete) %>
      <%= link_to('Create Event', new_event_path) %>
  <% else %>
      <%= link_to('Sign Up', '/signup') %>
      <%= link_to('Login', '/login') %>
  <% end %>
</div>

<h1> UpRise Shift Scheduler </h1>

<% Event.future_events.each do |e| %>
  <%= e.formatted_event_date %>, <%= link_to e.event_name, event_path(e) %> <br>
<% end %>