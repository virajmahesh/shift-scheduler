<div id = flash>
 <% if flash[:error] %>
  <p><%= flash[:error] %></p></br>
 <% end %>
 <% if flash[:notice] %>
  <p><%= flash[:notice] %></p></br>
 <% end %>
</div>

<div>
  <% unless @user.nil? %>
      <%= content_tag :a, @user.username %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
      <%= link_to('Create Event', new_event_path) %>
      <%= link_to('Notifications', user_activity_path) %>
  <% else %>
      <%= link_to('Sign Up', new_user_registration_path) %>
      <%= link_to('Login', new_user_session_path) %>
  <% end %>
</div>

<h1> UpRise Shift Scheduler </h1>

<% Event.future_events.each do |e| %>
  <%= e.formatted_event_date %>, <%= link_to e.event_name, event_path(e) %> <br>
<% end %>